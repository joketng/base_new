<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_main_white_bg"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_list_data_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/list_data_empty"
            android:textColor="@color/c_main_text"
            android:textSize="@dimen/site_date_text_size" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_list_data_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_water_stain" />

        <TextView
            android:id="@+id/tv_to_model_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_shape_roundrect_blue"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="切换示范城市：玉溪市"
            android:textColor="@color/c_main_blue"
            android:textSize="@dimen/site_date_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_list_data_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_list_data_empty"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_empty" />

    </RelativeLayout>

</FrameLayout>
